{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Also add this for compatibility
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Base URL and Path Aliases */
    "baseUrl": ".", // Root directory for module resolution
    "paths": {
      "vuetify/*": ["node_modules/vuetify/*"] // Explicit Vuetify path resolution
    },

    /* TypeScript for Vuetify */
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/shims-vuetify.d.ts"]
}
